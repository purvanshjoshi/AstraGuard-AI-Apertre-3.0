# AstraGuard AI Environment Configuration
# This file contains local configuration. DO NOT commit this file to version control.

# ============================================================================
# LOGGING & DEBUG
# ============================================================================
LOG_LEVEL=INFO
DEBUG=false
LOG_FILE=logs/astraguard.log
ENABLE_AUDIT_LOG=true

# ============================================================================
# DATABASE (for future use)
# ============================================================================
DATABASE_URL=sqlite:///data/astraguard.db
DATABASE_POOL_SIZE=5
DATABASE_TIMEOUT=30

# ============================================================================
# API & AUTHENTICATION
# ============================================================================
API_KEY=your_api_key_here_change_this
API_SECRET=your_api_secret_here_change_this
JWT_SECRET=your_jwt_secret_here_change_this
TOKEN_EXPIRY_HOURS=24

# ============================================================================
# SYSTEM BEHAVIOR
# ============================================================================
ASTRAGUARD_SIMULATION_MODE=true
ANOMALY_MODEL_PATH=anomaly/anomaly_if.pkl
POLICY_CONFIG_PATH=config/mission_policies.yaml

# ============================================================================
# PERFORMANCE & LIMITS
# ============================================================================
REQUEST_TIMEOUT_SECONDS=30
MAX_MEMORY_PERCENT=80
MAX_CPU_PERCENT=90
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=60

# ============================================================================
# TELEMETRY BOUNDS (for validation)
# ============================================================================
TELEMETRY_VOLTAGE_MIN=0.0
TELEMETRY_VOLTAGE_MAX=15.0
TELEMETRY_TEMPERATURE_MIN=-50.0
TELEMETRY_TEMPERATURE_MAX=100.0
TELEMETRY_GYRO_MIN=-360.0
TELEMETRY_GYRO_MAX=360.0
TELEMETRY_CURRENT_MIN=0.0
TELEMETRY_CURRENT_MAX=5.0
TELEMETRY_WHEEL_SPEED_MIN=0.0
TELEMETRY_WHEEL_SPEED_MAX=10000.0

# ============================================================================
# ALERTS & NOTIFICATIONS
# ============================================================================
ALERT_EMAIL=ops@example.com
ALERT_WEBHOOK_URL=https://hooks.slack.com/...
ENABLE_EMAIL_ALERTS=false
ENABLE_WEBHOOK_ALERTS=false

# ============================================================================
# SECURITY
# ============================================================================
ENABLE_HTTPS=false
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501
ENABLE_RATE_LIMITING=true
ENABLE_API_AUTHENTICATION=false

# ============================================================================
# EXTERNAL SERVICES (add as needed)
# ============================================================================
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
